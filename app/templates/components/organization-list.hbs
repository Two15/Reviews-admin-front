<h2>Select an organization</h2>
<div class="wrap-table">
  <table>
    <tr {{action "select" me}} class={{if (eq selected me.uid) "active"}}>
      <td><img src={{me.avatar_url}}></td>
      <td>{{me.name}}'s repositories</td>
    </tr>
    {{#if (is-pending orgsPromise)}}
      <div class="loading-spinner"></div>
    {{/if}}
    {{#each (await orgsPromise) as |org|}}
    <tr {{action "select" org}} class={{if (eq selected org.login) "active"}}>
      <td><img src={{org.avatar_url}}></td>
      <td>{{org.login}}</td>
    </tr>
    {{/each}}
  </table>
</div>
